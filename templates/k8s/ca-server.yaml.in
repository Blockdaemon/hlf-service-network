---
apiVersion: v1
kind: Service
metadata:
  name: ca-{{env.SUBDOMAIN1}}
  labels:
    app: fabric-ca
    org: {{env.SUBDOMAIN1}}.{{env.DOMAIN}}
    role: ca-server
  annotations:
    external-dns.alpha.kubernetes.io/hostname: ca.{{env.SUBDOMAIN1}}.{{env.DOMAIN}}.
spec:
  ports:
  - port: 7054
    protocol: TCP
  selector:
    app: fabric-ca
  type: LoadBalancer
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: fabric-ca
  labels:
    app: fabric-ca
    org: {{env.SUBDOMAIN1}}.{{env.DOMAIN}}
    role: ca-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: fabric-ca
  template:
    metadata:
      labels:
        app: fabric-ca
        org: {{env.SUBDOMAIN1}}.{{env.DOMAIN}}
        role: ca-server
    spec:
      volumes:
        - name: ca-fabric-secrets
          secret:
            secretName: ca
        - name: ca-data
      hostname: ca-{{env.SUBDOMAIN1}}
      # k8s sucks
      #hostname: ca
      #subdomain: {{env.SUBDOMAIN1}}
      containers:
        - name: ca-server
          image: hyperledger/fabric-ca:{{env.HLF_ARCH}}-{{env.HLF_VERSION}}
          command: ['fabric-ca-server']
          args: ['start', '-b', 'admin:adminpw', '-d']
          #command: [ "/bin/bash", "-c", "--" ]
          #args: [ "while true; do sleep 30; done;" ]
          env:
            - name:  FABRIC_CA_HOME
              value: "/data"
            - name:  FABRIC_CA_SERVER_CA_NAME
              value: "ca.{{env.SUBDOMAIN1}}.{{env.DOMAIN}}"
            - name:  FABRIC_CA_SERVER_CA_CERTFILE
              value: "/secrets/ca.{{env.SUBDOMAIN1}}.{{env.DOMAIN}}-cert.pem"
            - name:  FABRIC_CA_SERVER_CA_KEYFILE
              value: "/secrets/current_sk"
            - name:  FABRIC_CA_SERVER_TLS_ENABLED
              value: "true"
            - name:  FABRIC_CA_SERVER_TLS_CERTFILE
              value: "/secrets/ca.{{env.SUBDOMAIN1}}.{{env.DOMAIN}}-cert.pem"
            - name:  FABRIC_CA_SERVER_TLS_KEYFILE
              value: "/secrets/current_sk"
          ports:
            - containerPort: 7054
          volumeMounts:
            - name: ca-fabric-secrets
              mountPath: /secrets
            - name: ca-data
              mountPath: /data
---
