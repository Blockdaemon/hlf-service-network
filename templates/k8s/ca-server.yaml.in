apiVersion: apps/v1
kind: Deployment
metadata:
  name: fabric-ca-deployment
  labels:
    app: fabric-ca
spec:
  replicas: 1
  selector:
    matchLabels:
      app: fabric-ca
  template:
    metadata:
      labels:
        app: fabric-ca
    spec:
      volumes:
        - name: ca-fabric-secrets
          secret:
            secretName: ca
        - name: ca-data
      containers:
        - name: fabric-container
          image: hyperledger/fabric-ca:{{env.HLF_ARCH}}-{{env.HLF_VERSION}}
          command: ['fabric-ca-server']
          args: ['start', '-b', 'admin:adminpw', '-d']
          env:
            - name:  FABRIC_CA_HOME
              value: "/data"
            - name:  FABRIC_CA_SERVER_CA_NAME
              value: "ca.org1.{{env.DOMAIN}}"
            - name:  FABRIC_CA_SERVER_CA_CERTFILE
              value: "/secrets/ca.org1.{{env.DOMAIN}}-cert.pem"
            - name:  FABRIC_CA_SERVER_CA_KEYFILE
              value: "/secrets/current_sk"
            - name:  FABRIC_CA_SERVER_TLS_ENABLED
              value: "true"
            - name:  FABRIC_CA_SERVER_TLS_CERTFILE
              value: "/secrets/ca.org1.{{env.DOMAIN}}-cert.pem"
            - name:  FABRIC_CA_SERVER_TLS_KEYFILE
              value: "/secrets/current_sk"
          ports:
            - containerPort: 7054
          volumeMounts:
            - name: ca-fabric-secrets
              mountPath: /secrets
            - name: ca-data
              mountPath: /data

